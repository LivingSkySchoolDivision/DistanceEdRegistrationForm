@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">
            @User.Identity.Name &nbsp;
            <a asp-area="" asp-page="/Signout">Sign out</a>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <i>Not signed in</i>
    </ul>
}